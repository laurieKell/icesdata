# R package build artifacts
^\.Rproj\.user$
^\.Rhistory$
^\.RData$
^\.Ruserdata$
^cache$
^.*\.Rproj$

# Data-raw directory (source data, not included in package)
^data-raw/$

# Note: data/ directory IS included in package for lazy loading
# Large data files (> 5MB) should be placed in vignettes/data/ instead

# Documentation build artifacts
^docs/$
^vignettes/.*\.html$
^vignettes/cache/
^vignettes/figures/
^vignettes/Rmd/$

# Test artifacts (keep tests directory)
^tests/testthat/_snaps/$
^tests/testthat/_snaps/.*$

# OS generated files
^\.DS_Store$
^Thumbs\.db$

# IDE files
^\.vscode/$
^\.idea/$
^.*\.swp$
^.*\.swo$

# Temporary files
^.*\.tmp$
^.*\.temp$

# Backup folder
^_backup/$

